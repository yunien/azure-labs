{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": true,
            "basics": {}
        },
        "basics": [
            {
                "name": "envName",
                "type": "Microsoft.Common.TextBox",
                "label": "env",
                "defaultValue": "dev",
                "toolTip": "The env name should include 1-8 letters or digits.",
                "constraints": {
                    "required": true,
                    "regex": "^[A-Za-z0-9]{1,8}$",
                    "validationMessage": "env name are allowed, and the value must be 1-8 characters long."
                },
                "visible": true
            },
            {
                "name": "suffix",
                "type": "Microsoft.Common.TextBox",
                "label": "suffix",
                "defaultValue": "[substring(guid(),0,8)]",
                "toolTip": "The suffix name should include 0-8 letters or digits.",
                "constraints": {
                    "required": true,
                    "regex": "^[A-Za-z0-9]+$",
                    "validationMessage": "suffix are allowed, and the value must be 1-8 characters long."
                },
                "visible": true
            }
        ],
        "steps": [
            {
                "name": "transitVnet",
                "label": "transit Vnet",
                "elements": [
                    {
                        "name": "transitVnetCidr",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit Vnet Cidr",
                        "defaultValue": "10.0.0.0/16",
                        "toolTip": "transit Vnet Cidr",
                        "constraints": {
                            "required": true,
                            "regex": "^[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}\/[0-9]{1,2}",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    },
                    {
                        "name": "transitGatewaySubnetCidr",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit Vnet Cidr",
                        "defaultValue": "10.0.0.0/27",
                        "toolTip": "transit Vnet Cidr",
                        "constraints": {
                            "required": true,
                            "regex": "^[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}\/[0-9]{1,2}",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    },
                    {
                        "name": "transitBastionSubnetCidr",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit Vnet Cidr",
                        "defaultValue": "10.0.1.0/27",
                        "toolTip": "transit Vnet Cidr",
                        "constraints": {
                            "required": true,
                            "regex": "^[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}\/[0-9]{1,2}",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    },
                    {
                        "name": "transitFwSubnetCidr",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit Vnet Cidr",
                        "defaultValue": "10.0.2.0/26",
                        "toolTip": "transit Vnet Cidr",
                        "constraints": {
                            "required": true,
                            "regex": "^[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}\/[0-9]{1,2}",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    },
                    {
                        "name": "transitRegion",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit region",
                        "defaultValue": "eastus",
                        "toolTip": "default is resource group location",
                        "constraints": {
                            "required": true,
                            "regex": "^[A-Za-z0-9 ]+$",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "sharedVnet",
                "label": "shared Vnet",
                "elements": [
                    {
                        "name": "sharedRegion",
                        "type": "Microsoft.Common.TextBox",
                        "label": "shared region",
                        "defaultValue": "eastus",
                        "toolTip": "default is resource group location",
                        "constraints": {
                            "required": true,
                            "regex": "^[A-Za-z0-9 ]+$",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "workloadVnet",
                "label": "workload Vnet",
                "elements": [
                    {
                        "name": "workloadRegion",
                        "type": "Microsoft.Common.TextBox",
                        "label": "workload region",
                        "defaultValue": "eastus",
                        "toolTip": "default is resource group location",
                        "constraints": {
                            "required": true,
                            "regex": "^[A-Za-z0-9 ]+$",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "envName": "[basics('envName')]",
            "suffix": "[basics('suffix')]",
            "transitVnetCidr": "[steps('transitVnet').transitVnetCidr]",
            "transitGatewaySubnetCidr": "[steps('transitVnet').transitGatewaySubnetCidr]",
            "transitBastionSubnetCidr": "[steps('transitVnet').transitBastionSubnetCidr]",
            "transitFwSubnetCidr": "[steps('transitVnet').transitFwSubnetCidr]",
            "transitRegion": "[steps('transitVnet').transitRegion]",
            "sharedRegion": "[steps('sharedVnet').sharedRegion]",
            "workloadRegion": "[steps('workloadVnet').workloadRegion]",
            "location": "[location()]"
        }
    }
}