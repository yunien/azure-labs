{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": true,
            "basics": {
                "description": "**Azure Sentinel All-In-One** deployment, see more information about this project [here](https://github.com/Azure/Azure-Sentinel/Tools/Sentinel-All-In-One/).",
                "location": {
                    "label": "Location",
                    "toolTip": "Location for all resources",
                    "resourceTypes": [
                        "Microsoft.OperationalInsights"
                    ]
                }
            }
        },
        "basics": [
            {
                "name": "envName",
                "type": "Microsoft.Common.TextBox",
                "label": "env",
                "defaultValue": "dev",
                "toolTip": "The env name should include 1-8 letters or digits.",
                "constraints": {
                    "required": true,
                    "regex": "^[A-Za-z0-9]{1,8}$",
                    "validationMessage": "env name are allowed, and the value must be 1-8 characters long."
                },
                "visible": true
            },
            {
                "name": "suffix",
                "type": "Microsoft.Common.TextBox",
                "label": "suffix",
                "defaultValue": "[substring(guid(),0,8)]",
                "toolTip": "The suffix name should include 0-8 letters or digits.",
                "constraints": {
                    "required": true,
                    "regex": "^[A-Za-z0-9]+$",
                    "validationMessage": "suffix are allowed, and the value must be 1-8 characters long."
                },
                "visible": true
            }
        ],
        "steps": [
            {
                "name": "transitVnet",
                "label": "transit Vnet",
                "elements": [
                    {
                        "name": "transitSubscriptionId",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit Subscriptins Id",
                        "placeholder": "",
                        "defaultValue": "[subscription().subscriptionId]",
                        "toolTip": "default is subscriptionId",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$",
                            "validationMessage": "should be subscription Id"
                        },
                        "visible": true
                    },
                    {
                        "name": "transitRegion",
                        "type": "Microsoft.Common.TextBox",
                        "label": "transit region",
                        "placeholder": "",
                        "defaultValue": "[resourceGroup().location]",
                        "toolTip": "default is resource group location",
                        "constraints": {
                            "required": true,
                            "regex": "^[A-Za-z0-9 ]+$",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "sharedVnet",
                "label": "shared Vnet",
                "elements": [
                    {
                        "name": "sharedSubscriptionId",
                        "type": "Microsoft.Common.TextBox",
                        "label": "shared Subscriptins Id",
                        "placeholder": "",
                        "defaultValue": "[subscription().subscriptionId]",
                        "toolTip": "default is subscriptionId",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$",
                            "validationMessage": "should be subscription Id"
                        },
                        "visible": true
                    },
                    {
                        "name": "sharedRegion",
                        "type": "Microsoft.Common.TextBox",
                        "label": "shared region",
                        "placeholder": "",
                        "defaultValue": "[resourceGroup().location]",
                        "toolTip": "default is resource group location",
                        "constraints": {
                            "required": true,
                            "regex": "^[A-Za-z0-9 ]+$",
                            "validationMessage": "should be location"
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "envName": "[basics('envName')]",
            "suffix": "[basics('suffix')]",
            "tags": "[basics('tags')]",
            "transitSubscriptionId": "[steps('transitVnet').transitSubscriptionId]",
            "transitRegion": "[steps('transitVnet').transitRegion]",
            "sharedSubscriptionId": "[steps('sharedVnet').sharedSubscriptionId]",
            "sharedRegion": "[steps('sharedVnet').sharedRegion]",
            "location": "[location()]"
        }
    }
}