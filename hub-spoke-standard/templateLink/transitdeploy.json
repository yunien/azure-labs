{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tags": {
            "type": "object"
        },
        "location": {
            "type": "string"
        },
        "makeSuffix": {
            "type": "string"
        },
        "transitVnetCidr": {
            "type": "string"
        },
        "transitGatewaySubnetCidr": {
            "type": "string"
        },
        "transitBastionSubnetCidr": {
            "type": "string"
        },
        "transitFwSubnetCidr": {
            "type": "string"
        }
    },
    "variables": {
        "transitVnetName": "[concat('vnet-transit-', parameters('makeSuffix'))]",
        "gatewaySubnetName": "GatewaySubnet",
        "bastionSubnetName": "AzureBastionSubnet",
        "fwPayloadSubnetName": "AzureFirewallSubnet",
        "bastionPublicIpName": "[concat('pip-bst-', parameters('makeSuffix'))]",
        "bastionName": "[concat('bst-', parameters('makeSuffix'))]",
        "bastionSku": "Basic" // Basic or Standard
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-08-01",
            "name": "[variables('transitVnetName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [ "[parameters('transitVnetCidr')]" ]
                },
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "comments": "gateway subnet",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('transitVnetName'), '/', variables('gatewaySubnetName'))]",
            "apiVersion": "2021-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('transitVnetName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('transitGatewaySubnetCidr')]"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('transitVnetName'), '/', variables('bastionSubnetName'))]",
            "apiVersion": "2021-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('transitVnetName'), variables('gatewaySubnetName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('transitBastionSubnetCidr')]"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('transitVnetName'), '/', variables('fwPayloadSubnetName'))]",
            "apiVersion": "2021-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('transitVnetName'), variables('bastionSubnetName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('transitFwSubnetCidr')]"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2021-08-01",
            "name": "[variables('bastionPublicIpName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2021-08-01",
            "name": "[variables('bastionName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "[variables('bastionSku')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIpAddresses', variables('bastionPublicIpName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('transitVnetName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "bastionConfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('bastionPublicIpName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('transitVnetName'), variables('bastionSubnetName'))]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}