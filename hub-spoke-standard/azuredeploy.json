{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "envName": {
            "type": "string",
            "metadata": {
                "description": "env"
            }
        },
        "suffix": {
            "type": "string",
            "metadata": {
                "description": "suffix string"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags that wil be associated to the resources"
            },
            "defaultValue": {
                "environment": "lab",
                "creater": "electrum"
            }
        },
        "transitSubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "transit Subscriptins Id"
            }
        },
        "transitRegion": {
            "type": "string",
            "metadata": {
                "description": "transit region"
            }
        },
        "sharedSubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "shared Subscriptins Id"
            }
        },
        "sharedRegion": {
            "type": "string",
            "metadata": {
                "description": "shared region"
            }
        }
    },
    "variables": {
        "makeSuffix": "[concat(parameters('envName'),'-',parameters('suffix'))]",
        "rgTransitName": "[concat('rg-transit-',variables('makeSuffix'))]",
        "transitSubDeploymentName": "[concat('deploy-',variables('rgTransitName'))]",
        "rgSharedName": "[concat('rg-shared-',variables('makeSuffix'))]",
        "sharedSubDeploymentName": "[concat('deploy-',variables('rgSharedName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[variables('transitSubDeploymentName')]",
            "location": "[parameters('transitRegion')]",
            "subscriptionId": "[parameters('transitSubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2021-04-01",
                            "name": "[variables('rgTransitName')]",
                            "location": "[parameters('transitRegion')]",
                            "tags": "[parameters('tags')]",
                            "managedBy": "",
                            "properties": {}
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[variables('sharedSubDeploymentName')]",
            "location": "[parameters('sharedRegion')]",
            "subscriptionId": "[parameters('sharedSubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2021-04-01",
                            "name": "[variables('rgSharedName')]",
                            "location": "[parameters('sharedRegion')]",
                            "tags": "[parameters('tags')]",
                            "managedBy": "",
                            "properties": {}
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "transitResourceGroupName": {
            "type": "string",
            "value": "[variables('rgTransitName')]"
        },
        "sharedResourceGroupName": {
            "type": "string",
            "value": "[variables('rgSharedName')]"
        }
    }
}
